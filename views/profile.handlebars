<h2 id="budget-logo">Budg√©t</h2>
<section id="card-container">
    <div class="table">
        <div class="profile-container">
            {{!-- <form class="add-form"> --}}
                <h1 class="form-title">VIEW PROFILE</h1>
                <ul id="profile-ul">
                    <li>
                        <strong>Username: </strong>{{user.username}}
                    </li>
                    <li>
                        <strong>Email: </strong>{{user.email}}
                    </li>
                </ul>
        </div>

        <div id="grid-container-profile">
            <div class="grid-item">
                <h4>Total Spent:</h4>
                <h2>${{totalSpent}}</h2>
            </div>
        </div>
        <form id="viewCategory">
            <label for="category">View total for:</label>
            <select id="category">
                {{#each parentcategories as |category|}}
                <option value="{{category.id}}">
                    {{category.category_name}}</option>
                {{/each}}
            </select>
            <div id="renderCategoryTotal"></div>
            <input type="submit" value="submit" name="submitCategory" id="submitCategoryBtn">
        </form>

    </div>


    </div>
    <div class="wave wave1"></div>
    <div class="wave wave2"></div>
    <div class="wave wave3"></div>
    <div class="wave wave4"></div>
</section>
